<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_rounded_bg"
        android:orientation="vertical" android:tag="layout/cu_dialog_generic_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGeneric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_warning" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/title_dialog"
                    android:textSize="26sp"
                    android:visibility="gone"
                    tools:text="Cuenta creada"
                    tools:visibility="visible" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMessageGeneric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="@color/color_message_generic"
                            android:textSize="20sp"
                            android:visibility="gone"
                            tools:text="Tu cuenta ha sido creada con Ã©xito,\n para vincular tu tarjeta presiona\n continuar"
                            tools:visibility="visible" />
                    </LinearLayout>

                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGeneric"
                    style="@style/ButtonNormalFilled"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    android:text="@string/aceptar" />

                <TextView
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/cancelar"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

         